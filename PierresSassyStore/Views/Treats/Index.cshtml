@using System.Collections.Generic
@model List<PierresSassyStore.Models.Treat>
<h1>Treat Library</h1>
@if(User.Identity.IsAuthenticated)
{
    <h4>Add a new treat recipe @Html.ActionLink("here","Create")</h4>
}

@if(Model.Count == 0)
{
    <h3>There are no treat recipes in the library</h3>
}
else
{
    <ul class="library">
        @foreach(Treat treat in Model)
        {
            <li>
                @await Html.PartialAsync("_CardPartial", treat)
            </li>
        }
    </ul>
}
<p>@Html.ActionLink("Go to Flavors List", "Index", "Flavors")</p>