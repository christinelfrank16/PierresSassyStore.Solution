@using System.Collections.Generic
@model List<PierresSassyStore.Models.Flavor>
<h1>Flavor Library</h1>
@if(User.Identity.IsAuthenticated)
{
    <h4>Add a new flavor @Html.ActionLink("here","Create")</h4>
}

@if(Model.Count == 0)
{
    <h3>There are no flavor modifiers in the library</h3>
}
else
{
    <ul class="library">
        @foreach(Flavor flavor in Model)
        {
            <li>
                @await Html.PartialAsync("_CardPartial", flavor)
            </li>
        }
    </ul>
    
}