@using System.Security.Claims

<ul class="navbar-nav">
@if (User.Identity.IsAuthenticated)
{
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Index" title="Manage">Hello @User.Identity.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
         @Html.ActionLink("Register", "Register", "Accounts", null, new {@class = "nav-link text-dark"})
    </li>
    <li class="nav-item">
        @Html.ActionLink("Login", "Login", "Accounts", null,  new {@class = "nav-link"})
    </li>
}
</ul>