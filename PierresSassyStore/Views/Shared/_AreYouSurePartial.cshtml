@model PierresSassyStore.ViewModels.ModalViewModel

<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#AreYouSureModal-@Model.Id">
  @Model.Name
</button>

<div class="modal" id="AreYouSureModal-@Model.Id" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Are you sure?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>This action can not be undone.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        @using(Html.BeginForm(Model.LinkAction, Model.LinkController, new { id = @Model.Id}))
        {
          <input type="submit" class="btn btn-primary" value="@Model.Name">
        }
      </div>
    </div>
  </div>
</div>